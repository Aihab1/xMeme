{
  "swagger": "2.0",
  "info": {
    "description": "API of the xMeme application is documented here",
    "version": "1.0.0",
    "title": "Swagger for xMeme"
  },
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "servers": {
    "url": "http://localhost:8081"
  },
  "basePath": "/",
  "paths": {
    "/memes": {
      "get": {
        "operationId": "memes.read_all",
        "tags": [
          "Memes"
        ],
        "summary": "Read the entire set of memes, sorted by id in descending order",
        "description": "Read the entire set of memes, sorted by id in descending order",
        "responses": {
          "200": {
            "description": "Successfully read memes set operation",
            "schema": {
              "type": "array",
              "items": {
                "properties": {
                  "id": {
                    "type": "integer",
                    "description": "Id of the meme"
                  },
                  "name": {
                    "type": "string",
                    "description": "Name of the meme owner"
                  },
                  "caption": {
                    "type": "string",
                    "description": "Caption of the meme"
                  },
                  "url": {
                    "type": "string",
                    "description": "Url of the meme image"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "operationId": "memes.create",
        "tags": [
          "Memes"
        ],
        "summary": "Create a meme",
        "description": "Create a new meme",
        "parameters": [
          {
            "name": "meme",
            "in": "body",
            "description": "Meme to create",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "description": "Name of the meme owner to create"
                },
                "caption": {
                  "type": "string",
                  "description": "Caption of the meme to create"
                },
                "url": {
                  "type": "string",
                  "description": "Url of the meme to create"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Successfully created meme",
            "schema": {
              "properties": {
                "id": {
                  "type": "integer",
                  "description": "Id of the meme"
                }
              }
            }
          }
        }
      }
    },
    "/memes/{id}": {
      "get": {
        "operationId": "memes.read_one",
        "tags": [
          "Memes"
        ],
        "summary": "Read one meme",
        "description": "Read one meme",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Id of the meme to get",
            "type": "integer",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully read meme from memes data operation",
            "schema": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer",
                  "description": "Id of the meme"
                },
                "name": {
                  "type": "string",
                  "description": "Name of the meme owner"
                },
                "caption": {
                  "type": "string",
                  "description": "Caption of the meme"
                },
                "url": {
                  "type": "string",
                  "description": "Url of the meme image"
                }
              }
            }
          }
        }
      },
      "patch": {
        "operationId": "memes.update",
        "tags": [
          "Memes"
        ],
        "summary": "Update a meme",
        "description": "Update a meme",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Id the meme to update",
            "type": "integer",
            "required": true
          },
          {
            "name": "meme",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "caption": {
                  "type": "string",
                  "description": "Caption of the meme"
                },
                "url": {
                  "type": "string",
                  "description": "Url of the meme image"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully updated the meme",
            "schema": {
              "properties": {
                "id": {
                  "type": "integer",
                  "description": "Id of the meme in the database"
                },
                "name": {
                  "type": "string",
                  "description": "Name of the meme owner"
                },
                "caption": {
                  "type": "string",
                  "description": "Caption of the meme"
                },
                "url": {
                  "type": "string",
                  "description": "Url of the meme image"
                }
              }
            }
          }
        }
      }
    }
  }
}